<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/c_commom_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/c_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView" />

        <EditText
            android:id="@+id/c_edTv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="..." />

        <Button
            android:id="@+id/c_btn_submit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Submit" />
    </LinearLayout>
    
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Focus it" />

    <CheckBox
        android:id="@+id/c_theckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Check it" />
    
    <RadioGroup
        android:id="@+id/c_radioGroup"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/c_radio0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="RdBtn1" />

        <RadioButton
            android:id="@+id/c_radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RdBtn2" />

        <RadioButton
            android:id="@+id/c_radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RdBtn3" />
    </RadioGroup>
    
    <Button 
        android:id="@+id/c_btn_listViewActy"
        android:text="ListView Activity"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    <SeekBar 
        android:id="@+id/c_seekBar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
   <LinearLayout 
       android:layout_height="wrap_content"
       android:layout_width="match_parent"
       android:orientation="horizontal">
        <TextView 
        android:id="@+id/c_seekBar_tv"
        android:layout_height="wrap_content"
        android:text="SeekBar Progress:"
        android:layout_width="0dp"
        android:layout_weight="1"/>
        <TextView 
        android:id="@+id/c_seekBar_status"
        android:layout_height="wrap_content"
        android:text="SeekBar TouchStop"
        android:layout_width="0dp"
        android:layout_weight="1"/>
   </LinearLayout>
    
    <TextView
        android:id="@+id/c_tv_showInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Info" />
    
</LinearLayout>